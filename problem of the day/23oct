class Solution {
    public boolean isPowerOfFour(int n) {
        boolean a=false;
        if(n==1){
            a=true;
        }
        if(n%4==0){
            for(int i=0;i<=15;i++){
                if(n==(int)Math.pow(4,i)){
                    a=true;
                    break;
                }
            }
        }
        return a;
    }
}
